@model PaginatedList<EmployeeViewModel>

@{
    ViewData["Title"] = "All Employees";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Employees</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @* Submitted as GET action method *@
            <form class="d-flex" asp-action="Index" asp-controller="Employee" method="get">
                <input name="searchString" class="form-control me-1" type="search"
                    placeholder="Search by first or last name..." aria-label="Search">
                <button class="btn btn-dark" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col"><a class="text-dark" asp-controller="Employee" asp-action="Index"
                                asp-route-sortOrder=@ViewData["NameSortParam"]>FirstName</a></th>
                        <th scope="col">LastName</th>
                        <th scope="col"><a class="text-dark" asp-controller="Employee" asp-action="Index"
                                asp-route-sortOrder=@ViewData["DateOfBirthSortParam"]>DateOfBirth</a></th>
                        <th scope="col">Gender</th>
                        <th scope="col">Email</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col">Address</th>
                        <th scope="col"><a class="text-dark" asp-controller="Employee" asp-action="Index"
                                asp-route-sortOrder=@ViewData["IsActiveSortParam"]>IsActive</a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (EmployeeViewModel employee in Model.Items)
                    {
                        <tr>
                            <th scope="row">@employee.EmployeeId</th>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.DateOfBirth</td>
                            <td>@employee.Gender</td>
                            <td>@employee.Email</td>
                            <td>@employee.PhoneNumber</td>
                            <td>@employee.Address</td>
                            <td>@employee.IsActive</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @* Paging *@
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
            <nav>
                <ul class="pagination justify-content-end">
                    <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                        <a class="page-link text-black" asp-route-pageNumber="1"
                            asp-route-sortOrder="@ViewData["CurrentSort"]"
                            asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            <span>First</span>
                        </a>
                    </li>

                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link text-black" asp-route-pageNumber="@(Model.PageIndex - 1)"
                            asp-route-sortOrder="@ViewData["CurrentSort"]"
                            asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            <span>Previous</span>
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                            <a class="page-link text-black" asp-route-pageNumber="@i"
                                asp-route-sortOrder="@ViewData["CurrentSort"]"
                                asp-route-currentFilter="@ViewData["CurrentFilter"]">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link text-black" asp-route-pageNumber="@(Model.PageIndex + 1)"
                            asp-route-sortOrder="@ViewData["CurrentSort"]"
                            asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            <span>Next</span>
                        </a>
                    </li>
                    <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link text-black" asp-route-pageNumber="@Model.TotalPages"
                            asp-route-sortOrder="@ViewData["CurrentSort"]"
                            asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            <span>Last</span>
                        </a>
                    </li>


                </ul>
            </nav>
        </div>
    </div>
</div>